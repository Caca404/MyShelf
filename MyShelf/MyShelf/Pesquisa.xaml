<Window x:Class="MyShelf.Pesquisa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyShelf"
        mc:Ignorable="d"
        Title="Pesquisa" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="33" Margin="545,45,0,0" TextWrapping="Wrap" Text="Pesquisar" VerticalAlignment="Top" Width="148" TextChanged="TextBox_TextChanged"/>
        <Button Content="🔎" HorizontalAlignment="Left" Height="33" Margin="708,45,0,0" VerticalAlignment="Top" Width="54"/>
        <TextBlock HorizontalAlignment="Left" Height="26" Margin="114,99,0,0" TextWrapping="Wrap" Text="Livros encontrados:" FontSize="20" VerticalAlignment="Top" Width="208"/>
        <ListBox HorizontalAlignment="Left" Height="194" Margin="51,156,0,0" VerticalAlignment="Top" Width="711"/>
        <Button Content="Home" HorizontalAlignment="Left" Height="24" Margin="114,49,0,0" VerticalAlignment="Top" Width="103"/>
        <CheckBox Content="F" HorizontalAlignment="Left" Height="16" Margin="460,178,0,0" VerticalAlignment="Top" Width="36" Checked="CheckBox_Checked"/>
        <CheckBox Content="QL" HorizontalAlignment="Left" Height="16" Margin="512,178,0,0" VerticalAlignment="Top" Width="52" Checked="CheckBox_Checked" RenderTransformOrigin="0.974,-0.997"/>
        <CheckBox Content="L" HorizontalAlignment="Left" Height="16" Margin="585,178,0,0" VerticalAlignment="Top" Width="59" Checked="CheckBox_Checked"/>
        <CheckBox Content="JL" HorizontalAlignment="Left" Height="16" Margin="668,178,0,0" VerticalAlignment="Top" Width="45" Checked="CheckBox_Checked"/>
        <TextBlock HorizontalAlignment="Left" Margin="76,369,0,0" TextWrapping="Wrap" Text="Legenda      F: Favoritos     QL: Quero ler     L: Lendo     JL: Já Lidos" VerticalAlignment="Top" Width="617"/>

    </Grid>
</Window>
